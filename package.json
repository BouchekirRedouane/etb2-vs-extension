{
    "name": "etb2-vs-code",
    "displayName": "etb2-vs-code",
    "description": "",
    "version": "0.0.1",
    "engines": {
      "vscode": "^1.80.0"
    },
    "categories": [
      "Other"
    ],
    "activationEvents": [
        "onNotebook:etb2-notebook"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "etb2-vs-code.etb2",
                "title": "ETB2"
            },
            {
                "command": "etb2.createNotebook",
                "title": "Create Notebook to run ETB2"
            },
            {
              "command": "welcome-view-content-sample.hello",
              "title": "Hello World!"
            }
        ],
        "notebooks": [
          {
            "type": "etb2-notebook",
            "displayName": "Sample Notebook",
            "selector": [
              {
                "filenamePattern": "*.sample-etb2-notebook"
              }
            ]
          }
        ],
        "viewsContainers": {
            "activitybar": [
              {
                "id": "package-explorer",       
                "title": "ETB2 workspace",
                "icon": "media/etb2-icon.svg"              
              }
            ]
          },
          "views": {
            "package-explorer": [               
              {
                "id": "package-dependencies",   
                "name": "Folders",
                "type": "tree"
              }
            ]
          },
          "viewsWelcome": [
            {
              "view": "workbench.explorer.emptyView",
              "contents": "You can have paragraphs of text here. You can have [links](https://code.visualstudio.com) to external sources or [internal commands](command:welcome-view-content-sample.hello).\nUse new lines to have new paragraphs.\nPlace a link alone in a paragraph to make it a button\n[Hello](command:welcome-view-content-sample.hello)"
            }
          ]
      },
    "scripts": {
      "vscode:prepublish": "npm run package",
      "compile": "webpack",
      "watch": "webpack --watch",
      "package": "webpack --mode production --devtool hidden-source-map",
      "compile-tests": "tsc -p . --outDir out",
      "watch-tests": "tsc -p . -w --outDir out",
      "pretest": "npm run compile-tests && npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
      "@types/vscode": "^1.80.0",
      "@types/glob": "^8.1.0",
      "@types/mocha": "^10.0.1",
      "@types/node": "20.2.5",
      "@typescript-eslint/eslint-plugin": "^5.59.8",
      "@typescript-eslint/parser": "^5.59.8",
      "eslint": "^8.41.0",
      "glob": "^8.1.0",
      "mocha": "^10.2.0",
      "typescript": "^5.1.3",
      "ts-loader": "^9.4.3",
      "webpack": "^5.85.0",
      "webpack-cli": "^5.1.1",
      "@vscode/test-electron": "^2.3.2"
    }
  }
  